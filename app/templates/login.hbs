<div class="container-fluid col-md-4 col-md-offset-4  col-sm-6 col-sm-offset-3">


  <form class="form-horizontal">
    {{#if loginFailed}}
    <div class="has-error">
      <label class="control-label" >Invalid username or password.</label>
    </div>
    {{/if}}

    {{#if isSlowConnection}}
      <div class="alert alert-info">The request seems to be taking more time than usual, please wait.</div>
    {{/if}}
    <h2>Login</h2>
    <div class="control-group">
      <label class="control-label" for="inputEmail"></label>
      <div class="controls">
        {{input value=username type="text" id="inputUsername" class="form-control" placeholder="username"}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputEmail"></label>
      <div class="controls">
        {{input value=password type="password" id="inputPassword" class="form-control" placeholder="password"}}
      </div>
    </div>
    <br>
    <div class="control-group">
      <div class="controls">
        <button {{bindAttr disabled="isProcessing"}} {{action "login" bubbles=false}} class="btn btn-primary col-md-4">Submit</button>
      </div>
    </div>
  </form>

</div>

{{outlet}}
